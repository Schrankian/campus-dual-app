    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TimetableWidget.TextView"
            android:id="@+id/appwidget_text"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Stundenplan"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            style="@style/TimetableWidget.ReloadIcon"
            android:id="@+id/reload_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="4dp"/>
    </RelativeLayout>

    <!-- Use a ListView or StackView for the list of lessons -->
    <ListView
        android:id="@+id/lessons_list"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="0dp"
        android:dividerHeight="0dp" />
    
    <!-- Add this empty view to show when the list is empty -->
    <TextView 
        style="@style/TimetableWidget.TextView"
        android:id="@+id/empty_view" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent" 
        android:gravity="center" 
        android:text="LÃ¤dt..." 
        android:textSize="22sp"
        android:visibility="gone" />

</LinearLayout>
